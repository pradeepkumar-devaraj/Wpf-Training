<UserControl x:Class="WpfUserControl.GetUserInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUserControl"
             mc:Ignorable="d" Width="300.295" Height="59.467">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="left" VerticalAlignment="Top">
            <Label>Enter input value</Label>
            <TextBox Height="25"  Width="200" ></TextBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" >
            <Button  Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,10,0" >Save</Button>
            <Button  Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" >Cancel</Button>
        </StackPanel>

    </Grid>
</UserControl>
